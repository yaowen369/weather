<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" 
    android:background="#aa4876FF"
    android:layout_gravity="center">
    
	<include layout="@layout/date_time_detail"
	    android:layout_height="fill_parent"
	    android:layout_width="0dp"
	    android:layout_weight="2"/>
	
	<LinearLayout 
	    android:layout_height="fill_parent"
	    android:layout_width="0dp"
	    android:layout_weight="3"
	    android:orientation="vertical"
	    >
	    <include layout="@layout/today_weather_detail"
	        android:id="@+id/todayWeather"
	        android:layout_width="fill_parent"
	        android:layout_height="0dp"
	        android:layout_weight="3" 
	        />
	    
	    <include layout="@layout/three_day_weather_detail"
	        android:id="@+id/threeDayWeather"
	        android:layout_width="fill_parent"
	        android:layout_height="0dp"
	        android:layout_weight="2"
	        />
	</LinearLayout>
   
</LinearLayout>
