<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dateTimeDetail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@drawable/ring_shape" >
    <!-- 最后一条设定android:background ，其实没起作用-->

    <!--ring_shape-->
    
    <TextView 
        android:id="@+id/lunarDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        />
    
    <TextClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="50dp"
        android:format24Hour="kk:mm"
        android:format12Hour="kk:mm"
        />
    
  <TextClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="15dp"
        android:format24Hour="EEEE"
        android:format12Hour="EEEE"
        />
 
   <TextClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="15dp"
        android:format24Hour="yyyy-MM-dd"
        android:format12Hour="yyyy-MM-dd"
        />
</LinearLayout>
